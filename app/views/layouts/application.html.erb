<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @title %></title>
    <meta name="description" content="<%= @description %>">
    <meta name="author" content="Brunno Pleffken Hosti">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.png' %>

    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Lato:400,700' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a href="/" class="navbar-brand">Destiny Weapons Comparison</a>
        </div>
        <div class="navbar-form navbar-right">
          <form action="/" method="post">
            <div class="form-group">
              Supported languages: <%= select_tag 'language', options_for_select({ 'Deutsch' => 'de', 'English' => 'en', 'Español' => 'es', 'Français' => 'fr', 'Italiano' => 'it', '日本語' => 'jp', 'Português (Brasil)' => 'pt-br' }, @language), class: 'form-control' %>
            </div>
          </form>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
